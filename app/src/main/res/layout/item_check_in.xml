<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="checkin"
            type="com.wheretogo.placesandroutesrecommenderapp.model.CheckIn" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/placeName"
            style="@style/regularTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{checkin.placeName}"
            android:layout_marginStart="@dimen/dim_two"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Place Name" />

        <TextView
            android:id="@+id/checkInDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Date"
            android:text="@{checkin.date}"
            android:textSize="14sp"
            style="@style/greyRegularTextViewStyle"
            app:layout_constraintTop_toTopOf="@id/placeName"
            app:layout_constraintBottom_toBottomOf="@id/placeName"
            app:layout_constraintStart_toEndOf="@id/placeName"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>